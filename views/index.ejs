<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Include for SEO -->
    <meta name="News Website" content="Bringing independent news to you">
    <!-- <meta name="keywords" content="keyword1, keyword2, ..."> -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">
    <title>Publizier</title>
</head>
<body class="font-quicksand-400">
    <%- include('partials/header') %>
    <div id="featured" class="d-flex flex-column flex-md-row justify-content-center w-100">
      <a href="<%= url.format({ pathname: '/article/' + firstArticle.article_title }) %>" class="text-decoration-none text-dark col-md-4 card mx-3 my-2 p-2 border-0">
        <div class="bg-image ">
          <img src="/img/placeholder/wef.jpg" class="img-fluid rounded overflow-hidden"/>
        </div>
        <div class="card-body px-1 pt-2 pb-1 border-bottom-theme-1">
          <h4 class="card-title text-center"><%= firstArticle.article_title.replaceAll('-', ' ') %></h4>
          <p class="m-0"><%= firstArticle.article_subtitle %></p>
        </div>
      </a>
      <a href="<%= url.format({ pathname: '/article/' + secondArticle.article_title }) %>" class="text-decoration-none text-dark col-md-4 card mx-3 my-2 p-2 border-0">
        <div class="bg-image ">
          <img src="/img/placeholder-ambulance-img.jpg" class="img-fluid rounded text-center"/>
        </div>
        <div class="card-body px-1 pt-2 pb-1 border-bottom-theme-1">
          <h4 class="card-title text-center"> <%= secondArticle.article_title.replaceAll('-', ' ') %></h4>
          <p class="m-0"><%= secondArticle.article_subtitle %></p>
        </div>
      </a>
    </div>
    <div class="d-flex p-6 my-4 mx-6 justify-content-center">
      <div class="col"></div>
      <div class="col-sm-10 col-md-7">
        <div class="mx-2 my-4 justify-content-center">
          <%- include('partials/text-card') %>
        </div>
        <div class="mx-2 my-4 justify-content-center">
          <%- include('partials/text-card') %>
        </div>
      </div>   
      <div class="col"></div>
    </div>
    <!-- Include live -->
    <div id="opinion-business-categories" class="d-flex flex-column flex-md-row justify-content-center w-100">
      <div id="business" class="col-md-5 me-2">
        <h2 class="text-center pb-2 border-bottom-theme-1">Business</h2>
      </div>
      <div id="opinion" class="col-md-5 ms-2">
        <h2 class="text-center pb-2 border-bottom-theme-1">Opinion</h2>
      </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>