<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    <div id="featured" class="d-flex flex-column flex-md-row justify-content-center w-100">
      <a href="<%= url.format({ pathname: '/article/' + firstArticle.article_title }) %>" class="text-decoration-none text-dark col-md-4 card mx-3 my-2 p-2 border-0">
        <div class="bg-image ">
          <img src="/img/placeholder/wef.jpg" class="img-fluid rounded overflow-hidden"/>
        </div>
        <div class="card-body px-1 pt-2 pb-1 border-bottom-theme-1">
          <h4 class="card-title py-2"><%= firstArticle.article_title.replaceAll('-', ' ') %></h4>
          <p class="m-0"><%= firstArticle.article_subtitle %></p>
        </div>
      </a>
      <a href="<%= url.format({ pathname: '/article/' + secondArticle.article_title }) %>" class="text-decoration-none text-dark col-md-4 card mx-3 my-2 p-2 border-0">
        <div class="bg-image ">
          <img src="/img/placeholder-ambulance-img.jpg" class="img-fluid rounded text-center"/>
        </div>
        <div class="card-body px-1 pt-2 pb-1 border-bottom-theme-1">
          <h4 class="card-title py-2"> <%= secondArticle.article_title.replaceAll('-', ' ') %></h4>
          <p class="m-0"><%= secondArticle.article_subtitle %></p>
        </div>
      </a>
    </div>
    <div class="d-flex p-6 my-4 mx-6 justify-content-center">
      <div class="col"></div>
      <div class="col-sm-10 col-md-7">
        <div class="mx-2 my-4 justify-content-center">
          <%- include('partials/text-card') %>
        </div>
        <div class="mx-2 my-4 justify-content-center">
          <%- include('partials/text-card') %>
        </div>
      </div>   
      <div class="col"></div>
    </div>
    <!-- Include live -->
    <!-- Maybe include categories like business, opinion, etc -->
    <%- include('partials/footer') %>
</body>
</html>