<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">
    <title>Publizier Live Feed</title>
</head>
<body class="d-flex flex-column justify-content-between mx-0 font-quicksand-400">
    <%- include('partials/header') %>
    <div class="d-flex justify-content-center">
        <div class="col"></div>
        <div class="col-11 col-md-7 my-4">
            <% if (numMessages) { %>
                <div class="text-center fs-3 mt-4 mb-5 font-quicksand-600">Live Coverage for <%= liveTopic %></div>
                <% liveUpdateMessages.forEach(message => { %>
                    <div class="m-auto">
                        <div class="card mb-4">
                            <!-- <%- include('partials/search-result', { article }) %> -->
                        </div>
                    </div>
                <% }); %>
            <% } else  { %>
                <!-- <div class="spacer"></div> -->
                <div class="d-flex flex-fill fs-4 text-center">We're currently not running any live program, but be sure to check in later!</div>
                <!-- <div class="spacer"></div> -->
            <% } %>
        </div>
        <div class="col"></div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>